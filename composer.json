{
    "name": "dbp/relay-base-organization-connector-campusonline-bundle",
    "description": "A template bundle for the Relay API gateway",
    "type": "symfony-bundle",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.3",
        "ext-json": "*",
        "api-platform/core": "^2.6",
        "dbp/campusonline-api": "^0.2.6",
        "dbp/relay-base-organization-bundle": "^0.1.8",
        "dbp/relay-core-bundle": "^0.1.43",
        "symfony/framework-bundle": "^5.4"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.4",
        "phpstan/phpstan": "^1.8.2",
        "phpstan/phpstan-phpunit": "^1.1.1",
        "phpunit/phpunit": "^9.5.24",
        "symfony/browser-kit": "^5.4.11",
        "symfony/http-client": "^5.4.12",
        "symfony/monolog-bundle": "^3.8",
        "symfony/phpunit-bridge": "^5.4.11",
        "vimeo/psalm": "^4.26"
    },
    "autoload": {
        "psr-4": {
            "Dbp\\Relay\\BaseOrganizationConnectorCampusonlineBundle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Dbp\\Relay\\BaseOrganizationConnectorCampusonlineBundle\\Tests\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.3"
        },
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "scripts": {
        "test": [
            "@php vendor/bin/phpunit"
        ],
        "phpstan": [
            "@php vendor/bin/phpstan analyze --ansi"
        ],
        "psalm": [
            "@php vendor/bin/psalm"
        ],
        "lint": [
            "@composer run cs",
            "@composer run phpstan",
            "@composer run psalm"
        ],
        "cs-fix": [
            "@php vendor/bin/php-cs-fixer --ansi fix"
        ],
        "cs": [
            "@php vendor/bin/php-cs-fixer --ansi fix --dry-run --diff"
        ],
        "coverage": [
            "@php vendor/bin/phpunit --coverage-html _coverage"
        ]
    }
}
